@model BookDetailsViewModal
<div class="modal fade" id="deleteModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle"
    aria-hidden="false">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-body d-flex flex-column align-items-center justify-content-center">
                <img src="~/images/icons8-alert-48.png" style="width:70px" class="mb-1" alt="">
                <h5 class="mb-3 deleteText" > Are you sure you want to delete this Book?</h5>
                <div class="d-flex">
                    <button type="button" onclick="deleteBook(@Model.bookid)" class="btn btn-primary multipleModifiersDelete me-2"
                        data-bs-dismiss="modal">Yes</button>
                    <button type="button" class="btn btn-outline-primary" data-bs-dismiss="modal">No</button>
                </div>
            </div>
        </div>
    </div>
</div>